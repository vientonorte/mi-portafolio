  <div class="scroll-progress" aria-hidden="true"><div class="scroll-progress__bar"></div></div>

  <script>
    const navbar=document.getElementById('navbar');
    window.addEventListener('scroll',()=>{window.scrollY>20?navbar.classList.add('scrolled'):navbar.classList.remove('scrolled')});
    const fades=document.querySelectorAll('.fade');
    if('IntersectionObserver'in window){
      const io=new IntersectionObserver(es=>{es.forEach(e=>{if(e.isIntersecting){e.target.classList.add('visible');io.unobserve(e.target)}})},{threshold:.1});
      fades.forEach(f=>io.observe(f));
    }else{fades.forEach(f=>f.classList.add('visible'))}
    const bar=document.querySelector('.scroll-progress__bar');
    document.addEventListener('scroll',()=>{const d=document.documentElement;bar.style.width=(d.scrollTop/(d.scrollHeight-d.clientHeight))*100+'%'},{passive:true});
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
